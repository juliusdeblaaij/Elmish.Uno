<UserControl
  x:Class="Elmish.Uno.Samples.Shell"
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
  xmlns:samples="using:Elmish.Uno.Samples"
  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
  xmlns:utoolkit="using:Uno.UI.Toolkit"
  Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
  d:DesignHeight="300"
  d:DesignWidth="400"
  mc:Ignorable="d">

  <Grid>
    <Grid.RowDefinitions>
      <RowDefinition Height="Auto" />
      <RowDefinition Height="*" />
    </Grid.RowDefinitions>

    <Grid utoolkit:VisibleBoundsPadding.PaddingMask="All"
          Visibility="{x:Bind Converter={StaticResource BoolToVisibilityConverter}, Mode=OneWay, Path=RootFrame.CanGoBack}" >
      <TextBlock
        Style="{StaticResource TitleTextBlockStyle}"
        HorizontalAlignment="Center"
        VerticalAlignment="Center"
        d:Text="Page name"
        Text="{x:Bind PageTypeName}" />
      <Button
        x:Name="BackButton"
        Click="OnBackButtonClick"
        HorizontalAlignment="Left"
        Style="{StaticResource NavigationBackButtonNormalStyle}" />
    </Grid>

    <Frame
      x:Name="RootFrame"
      x:FieldModifier="public"
      Grid.Row="1"
      NavigationFailed="OnNavigationFailed" />
  </Grid>
</UserControl>
